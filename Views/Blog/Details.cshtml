@model SimpleBlogApp.Models.Post

@{
    ViewData["Title"] = @Model.Title;
}

<style>
    * {
      box-sizing: border-box;
    }

    /* Create two unequal columns that float next to each other */
    /* Left column */
    .leftcolumn {   
      float: left;
      width: 75%;
    }

    /* Right column */
    .rightcolumn {
      float: left;
      width: 25%;
      padding-left: 20px;
    }

    /* The card effect */
    .card {
       background-color: white;
       padding: 20px;
       margin-top: 20px;
    }

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }
</style>

@* This is the main container for the two-column layout *@
<div class="row">

  @* ===== LEFT COLUMN - BLOG POST DETAILS ===== *@
  <div class="leftcolumn">
    <div class="card">
      <h2>@Model.Title</h2>
      <h5>By @Model.Author, @Model.PublishedDate.ToString("MMM dd, yyyy")</h5>
      
      @if (!string.IsNullOrEmpty(Model.ImageUrl))
      {
        <div class="image" style="height:500px; margin-bottom: 20px;">
          <img src="~/images/@Model.ImageUrl" alt="@Model.Title" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
      }
      
      <p style="font-size: 16px; line-height: 1.6;">
        @await Html.PartialAsync($"Posts/Post{Model.Id}")
      </p>
    </div>
  </div>

  @* ===== RIGHT COLUMN - STATIC CONTENT ===== *@
  <div class="rightcolumn">
    <div class="card">
      <h2>About Us</h2>
      <div class="image" style="height:200px;">
        <img src="~/images/cats.jpg" alt="A litter of 4 Kittens metaphorically referring to us." style="width: 100%; height: 100%; object-fit: cover;">
      </div>
      <p>We are Group 10 composed of; Gaa, Fullero, Nataba & Velasco</p>
    </div>
  </div>
</div>

<div style="clear: both; margin-top: 20px;">
  <a asp-action="Index" class="btn btn-primary">‚Üê Back to Posts</a>
</div>
